<Window x:Class="np_project.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:np_project.Views"
        mc:Ignorable="d"
        Height="auto" Width="auto"
        Background="#FFFF">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               Source="/Resources/Images/NP.png"
               HorizontalAlignment="Center"
               Width="114"/>

        <TextBlock
                   Text="¡Bienvenido!"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,75,0,10"/>

        <Border
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="10"
                Padding="10"
                Background="#E8F0F7" Height="300" Width="408" Grid.Row="1">
            <StackPanel Width="350" VerticalAlignment="Center">
                <TextBlock Text="DNI" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Dni, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8"
                         BorderThickness="0"
                         Background="#F5F5F5"/>

                <TextBlock Text="Contraseña" Margin="0,5,0,5"/>
                <PasswordBox Padding="8"
                             BorderThickness="0"
                             Background="#F5F5F5"
                             x:Name="PasswordBox"/>
                <TextBlock Text="Utilice al menos 8 caracteres con 1 número y un carácter especial."
                           FontSize="10"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>

                <Button x:Name="LoginButton"
                        Content="Iniciar Sesión"
                        Background="#27AE60"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10"
                        Margin="0,20,0,0"
                        BorderThickness="0"
                        Height="35"
                        Width="Auto"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        IsEnabled="true"/>
                <!-- template para aplicar diseño al button-->


                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="10"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
