<Window x:Class="np_project.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:np_project.ViewModels"
        xmlns:views="clr-namespace:np_project.Views"
        Title="Main" Height="auto" Width="auto" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#EEE">
            <Button Content="Inicio" Command="{Binding ShowHomeCommand}" Margin="0,0,0,8"/>
            <Button Content="Usuarios" Command="{Binding ShowUsersCommand}" Margin="0,0,0,8"/>
            <Button Content="Pedidos" Command="{Binding ShowOrdersCommand}" Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Contenedor dinámico -->
        <ContentControl Content="{Binding CurrentViewModel}"/> 

    </DockPanel>
</Window>
        